<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
      <h3>投稿数の前日比・前週比</h3>
      <table class="table table-bordered text-center">
        <thead>
          <tr>
            <th>今日の投稿数</th>
            <th>前日の投稿数</th>
            <th>前日比</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= @today_book.count %>
            </td>
            <td>
              <%= @yesterday_book.count %>
            </td>
            <td> <!-- 1÷0は出来ないから前日の投稿数が0の時は計算しない -->
              <% if @yesterday_book.count == 0 %>
                前日の投稿はありません
              <% else %>
                <% @the_day_before_ratio = @today_book.count / @yesterday_book.count.to_f %>
                <%= (@the_day_before_ratio*100).round %>%
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <table class="table table-bordered text-center">
        <thead>
          <tr>
            <th>今週の投稿数</th>
            <th>前週の投稿数</th>
            <th>前週比</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= @week_book.count %>
            </td>
            <td>
              <%= @week_ago_book.count %>
            </td>
            <td> <!-- 1÷0は出来ないから先週の投稿数が0の時は計算しない -->
              <% if @week_ago_book.count == 0 %>
                前日の投稿はありません
              <% else %>
                <% @the_week_before_ratio = @week_book.count / @week_ago_book.count.to_f %>
                <%= (@the_week_before_ratio*100).round %>%
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <h3>7日間分の投稿数</h3>
      <table class="table table-bordered text-center">
        <thead>
          <tr>
            <th>6日前</th>
            <th>5日前</th>
            <th>4日前</th>
            <th>3日前</th>
            <th>2日前</th>
            <th>1日前</th>
            <th>今日</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= @days6_ago.count %>
            </td>
            <td>
              <%= @days5_ago.count %>
            </td>
            <td>
              <%= @days4_ago.count %>
            </td>
            <td>
              <%= @days3_ago.count %>
            </td>
            <td>
              <%= @days2_ago.count %>
            </td>
            <td>
              <%= @yesterday_book.count %>
            </td>
            <td>
              <%= @today_book.count %>
            </td>
          </tr>
        </tbody>
      </table>
      <canvas id="myLineChart"></canvas>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.js"></script>
      <script>
        var ctx = document.getElementById('myLineChart');
        var myLineChart = new Chart(ctx, {
          type: 'line',
          data: {
            labels: ['6日前', '5日前', '4日前', '3日前', '2日前', '1日前', '今日'],
            datasets: [{
              label: '投稿した本の数',
              data: [<%= @days6_ago.count %>,
                     <%= @days5_ago.count %>,
                     <%= @days4_ago.count %>,
                     <%= @days3_ago.count %>,
                     <%= @days2_ago.count %>,
                     <%= @yesterday_book.count %>,
                     <%= @today_book.count %>],
              borderColor: "rgba(0,0,255,1)",
              backgroundColor: "rgba(0,0,0,0)",
              pointBackgroundColor: "rgba(0,0,255,1)"
            }]
          },
          options: {
            title: {
              display: true,
              text: '7日間の投稿数の比較'
            },
            scales: {
              yAxes: [{
                ticks: {
                  stepSize: 1
                }
              }]
            }
          }
        });
      </script>
    </div>
  </div>
</div>
